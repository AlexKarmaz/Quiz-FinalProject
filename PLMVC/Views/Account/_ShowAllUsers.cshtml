@model IEnumerable<PLMVC.Models.User.ShowUsersViewModel>
<h2>Manage users</h2>
<p>
    @Ajax.ActionLink("Create user", "Register", "Account",new AjaxOptions { UpdateTargetId = "main_container", LoadingElementId = "loading", HttpMethod = "GET" })
</p>
@if (Model.Count() == 0)
{
    <b>Only you are registered on this site...</b>
}

<table class="table">
    <tr>
        <th>
            User name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Roles
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @string.Join(",", item.RoleNames)
        </td>
        <td>
            @Ajax.ActionLink("Delete", "DeleteUser","Account", new { userId = item.Id },new AjaxOptions { UpdateTargetId = "main_container", LoadingElementId = "loading", HttpMethod = "GET", Confirm = "Do you really want to delete this user?" })
        </td>
    </tr>
}

</table>
