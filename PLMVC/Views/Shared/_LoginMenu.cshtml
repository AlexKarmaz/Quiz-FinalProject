@Scripts.Render("~/Scripts/customJS.js")
@if (User.Identity.IsAuthenticated)
{
    <li class="dropdown">
        <a class="dropdown-toggle login-dropdown" data-toggle="dropdown" role="button">@User.Identity.Name <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
           <li>
                <a>
                    <i class="glyphicon glyphicon-home"></i>@Ajax.ActionLink("Profile", "Index", "Profile", new AjaxOptions { UpdateTargetId = "main_container" })
                </a>
            </li>
            @*<li class="divider"></li>
            <li><a href="@Url.Action("Edit", "Profile", new { name = User.Identity.Name })"><i class="glyphicon glyphicon-edit"></i>Edit Profile</a></li>*@
            <li class="divider"></li>
            <li><a href="@Url.Action("LogOff", "Account")"><i class="glyphicon glyphicon-log-out"></i>Exit</a></li>
        </ul>
    </li>
}
else
{
    <div class="form-inline navbar-form">
        <button type="button" id="nav_button_register" class="btn btn-primary">Register</button>
        <button type="button" id="nav_button_login" class="btn btn-default">Login</button>

    </div>
}
