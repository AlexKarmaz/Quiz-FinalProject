<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Quiz</title>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-min")
    @Scripts.Render("~/bundles/unobtrusive-ajax")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/customJS.js")
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="row">
        @Html.Partial("_Header")
    </div>
    <div class="row">
        <div class="col-lg-2 text-center">
            @Html.Partial("_Advertising")
        </div>
        <div class="col-lg-9 jumbotron">
            <div id="loading" style="display:none;" align="center">
                @Html.Partial("_Loading")@*@<img src="@Url.Content("~/Content/Loading/4.gif")" />*@
            </div>
            <div id="main_container">
                @RenderBody()
            </div>
        </div>
        <div class="col-lg-1 text-center">
        </div>
    </div>
    <footer class="row">
        <div class="copyright">
            <div class="copyright-content">&copy; @DateTime.Now.Year - by Alex Karmaz</div>
            <div class="copyright-content social">
                <a href="https://vk.com/id118371746" target="_blank" class="btn btn-social-icon btn-vk">
                    <span class="fa fa-vk"></span>
                </a>
                <a href="http://twitter.com/alex_karmaz" target="_blank" class="btn btn-social-icon btn-twitter">
                    <span class="fa fa-twitter"></span> 
                </a>
                <a href="https://www.facebook.com/karmazct" target="_blank" class="btn btn-social-icon btn-facebook">
                    <span class="fa fa-facebook"></span>
                </a>
                <a href="https://github.com/AlexKarmaz/Quiz-FinalProject" target="_blank" class="btn btn-social-icon btn-github">
                    <span class="fa fa-github"></span>
                </a>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
