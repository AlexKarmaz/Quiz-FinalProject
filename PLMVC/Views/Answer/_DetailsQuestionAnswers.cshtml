@model IEnumerable<PLMVC.Models.Answer.AnswerViewModel>

<div>
    <h4> Details answers</h4>
    @if (Model.Count() == 0)
    {
        <div>
            This question don't has an answers
        </div>
    }
    else
    {
        <hr />
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsRight)
                </th>
                <th>
                </th>
                @*<th>
                </th>*@

            </tr>
            @foreach (var item in Model)
            {
                <tr class="EditAnswer-@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRight)
                    </td>
                    <td>
                        @Ajax.ActionLink("Edit", "EditQuestionAnswer", new { answerId = item.Id }, new AjaxOptions { UpdateTargetId = "work_with_answer" }) |
                        @Ajax.ActionLink("Delete", "DeleteQuestionAnswer", new { answerId = item.Id }, new AjaxOptions { UpdateTargetId = "details_question_answers", Confirm = "Do you really want to delete this answer?", HttpMethod = "GET" })
                    </td>
                    @*<td>
                        @Ajax.ActionLink("Delete", "DeleteQuestionAnswer", new { answerId = item.Id }, new AjaxOptions { UpdateTargetId = "details_question_answers", Confirm = "Do you really want to delete this answer?", HttpMethod = "GET" })
                    </td>*@
                </tr>
            }
        </table>
    }
    @Ajax.ActionLink("Add answer", "CreateQuestionAnswer", "Answer", new { questionId = @ViewBag.QuestionId }, new AjaxOptions { UpdateTargetId = "work_with_answer", HttpMethod = "GET" })
    <div id="work_with_answer">

    </div>
</div>

