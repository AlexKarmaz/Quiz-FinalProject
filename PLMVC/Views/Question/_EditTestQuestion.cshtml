@model PLMVC.Models.Question.QuestionViewModel
@Scripts.Render("~/bundles/jqueryval")

@using (Ajax.BeginForm("EditTestQuestion", new AjaxOptions { UpdateTargetId = "details_test_questions", HttpMethod = "POST" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Resources.Resource.EditQuestion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.TestId)
        @Html.HiddenFor(model => model.ThemeId)

        <div class="form-group">
            <label class="control-label col-md-2">
                @Resources.Resource.Text
            </label>
            <div class="edit-question-save col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                <input type="submit" value=@Resources.Resource.Save class="btn btn-default" />
            </div>
        </div>
</div>
}

