@model PLMVC.Models.Question.QuestionViewModel

@using (Ajax.BeginForm("EditTestQuestion", new AjaxOptions { UpdateTargetId = "details_test_questions", HttpMethod = "POST" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit question</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.TestId)
        @Html.HiddenFor(model => model.ThemeId)
        @*<div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.ThemeId)
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="edit-question-save col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
</div>
}

