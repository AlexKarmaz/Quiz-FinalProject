@model PLMVC.Models.Question.QuestionViewModel

<div id="detail_one_question">
    <hr />
    <h4>@Resources.Resource.QuestionDetails</h4>
    <hr />
    <dl class="dl-horizontal">
       
        <dd>
            @Html.HiddenFor(model => model.ThemeId)
        </dd>

        <dt>
            @Resources.Resource.Text
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Text) 
            @Ajax.ActionLink(@Resources.Resource.Edit, "EditTestQuestion", new { questionId = Model.Id }, new AjaxOptions { UpdateTargetId = "detail_one_question", HttpMethod = "GET" })
        </dd>
    </dl>
</div>

<div id="details_question_answers">
    @Ajax.ActionLink(@Resources.Resource.ShowAnswers, "DetailsQuestionAnswers", "Answer", new { questionId = Model.Id}, new AjaxOptions { UpdateTargetId = "details_question_answers", HttpMethod = "GET" })
</div>